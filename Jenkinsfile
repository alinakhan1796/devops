pipeline {
    agent any

    stages {
        stage('One') {
            steps {
                echo 'Hi, welcome to pipeline demo...'
                sleep 1   // just to show time taken
            }
        }

        stage('Two') {
            steps {
                echo 'Sample testing of Stage 2'
                sleep 1
            }
        }

        stage('Three') {
            steps {
                echo 'Thanks for using Jenkins Pipeline'
                sleep 1
            }
        }
    }
}


